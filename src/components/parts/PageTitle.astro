---
type Props = {
  title: string;
};

const title = Astro.props.title;
---

<h1 class="page-title-text">
  {title}.
</h1>
<style is:global lang="scss">
  @use "@styles/vars" as *;
  .page-title-text {
    font-size: 2.4rem;
    margin-bottom: 1.5rem;
    line-height: 2.8rem;
    font-weight: 600;
    font-family: $display;
    visibility: hidden;
    grid-area: heading;
    @include device(sm) {
      font-size: 3rem;
      line-height: 3.3rem;
      margin-bottom: 2rem;
    }
    @include device(lg) {
      font-size: 3.6rem;
      line-height: 4rem;
      margin-bottom: 2.4rem;
    }
    @include device(xl) {
      font-size: 4rem;
      line-height: 4.2rem;
      margin-bottom: 2.8rem;
    }
    @include device(xxl) {
      font-size: 4.2rem;
      line-height: 4.6rem;
      margin-bottom: 3rem;
    }
  }
  .title-chars,
  .title-words {
    display: inline-block;
    white-space: keep-all;
  }
</style>
