---
import type { ArticleItems } from "@pages/politica-privacidad.astro";

type Props = {
  data: ArticleItems;
};
const { data } = Astro.props;
---

<div class="page-content">
  {
    data.map((article) => (
      <article class="page-content--article">
        <h2 class="page-content--title">{article.title}</h2>
        {article.content.map((p) => (
          <p class={`page-content--text__${p.class}`}>{p.text}</p>
        ))}
      </article>
    ))
  }
</div>
<style lang="scss">
  @use "@styles/vars" as *;
  .page-content {
    padding: 1.2rem 0;
    &--title {
      @include device(xl) {
        font-size: 2.4rem;
        line-height: 3rem;
        padding: 0 0 1.2rem;
      }
    }
    &--article {
      margin-bottom: 3rem;
    }
    &--text {
      &__regular {
        margin-bottom: 1rem;
      }
      &__dotted-num {
        padding-left: 1rem;
        margin-bottom: 0.4rem;
        position: relative;
        &::before {
          content: "Â· ";
          position: absolute;
          left: -0.1rem;
        }
      }
      &__underlined {
        margin-top: 2.2rem;
        margin-bottom: 1.8rem;
        text-decoration: underline;
      }
    }
  }
</style>
